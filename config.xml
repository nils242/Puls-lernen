<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.hello-world"
        version   = "1.0.0">
        
 <preference name="ShowSplashScreenSpinner" value="false" />
<preference name="fullscreen" value="false" />
<preference name="orientation" value="portrait" />
<preference name="permissions" value="none"/>
<preference name="SplashMaintainAspectRatio" value="true" />
<preference name="AutoHideSplashScreen" value="true" />
<preference name="SplashScreenDelay" value="4000" />       
        
 <splash src="splash.png" />       
<icon src="ldpi.png" platform="android" qualifier="ldpi" />
<icon src="mdpi.png" platform="android" qualifier="mdpi" />
<icon src="hdpi.png" platform="android" qualifier="hdpi" />
<icon src="xhdpi.png" platform="android" qualifier="xhdpi" />
<icon src="xxhdpi.png" platform="android" qualifier="xxhdpi" />
<icon src="fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />        
        
  <name>Pulsmessung üben</name>

  <description>
      Die Messung verschiedener Pulsarten durch Vibration des Smartphones üben
  </description>

    <author href="http://www.nilswommelsdorf.de" email="nils@nilswommelsdorf.de">
        Nils Wommelsdorf
    </author>

    <plugin name="cordova.plugin.vibration" spec="https://github.com/apache/cordova-plugin-vibration.git" />
<plugin name="cordova-plugin-splashscreen" source="npm"/>
<plugin name="cordova-plugin-whitelist" source="npm"/>        
<gap:plugin name="cordova-plugin-admob" source="npm" />   
        
<allow-intent href="http://*/*" />        
 
</widget>
